FROM node:20-alpine AS build
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:1.27-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
# Angular SSR/prerender builds output under /browser
COPY --from=build /app/dist/office-assistant-frontend/browser /usr/share/nginx/html
EXPOSE 80
